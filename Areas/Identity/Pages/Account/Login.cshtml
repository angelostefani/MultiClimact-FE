@page
@model LoginModel
@{}

<h1>@ViewData["Title"]</h1>

<div class="row justify-content-center align-items-center" style="height: 100vh;">
    <div class="col-sm-4">
        <!-- Spazio vuoto a sinistra -->
    </div>
    <div class="col-sm-4">
        <section class="bg-light p-4 rounded shadow">
            <div><img src="~/images/MULTICLIMACT-Powerpoint-Template.jpg" class="img-fluid" alt="Responsive image"></div>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
            </form>

            <!-- Frase e link per la registrazione -->
            <p class="mt-3">Don't have an account? <a href="/Identity/Account/Register">Register here</a></p>
        </section>
    </div>
    <div class="col-sm-4">
        <!-- Spazio vuoto a destra -->
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}